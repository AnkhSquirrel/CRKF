<AnchorPane prefHeight="643.0" prefWidth="604.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.kyo.crkf.controller.CreateEcoleModalController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Création d'une nouvelle école">
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <GridPane prefHeight="179.0">
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="120.0" prefWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="454.0" minWidth="10.0" prefWidth="452.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label alignment="CENTER" prefHeight="125.0" prefWidth="150.0" text="Nom :">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nom" GridPane.columnIndex="1" />
                  <Label layoutX="10.0" layoutY="10.0" prefHeight="125.0" prefWidth="150.0" GridPane.rowIndex="1">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </GridPane>
            <ButtonBar prefHeight="40.0">
              <buttons>
                <Button fx:id="buttonAnnuler" alignment="CENTER" contentDisplay="TOP" minWidth="52.0" mnemonicParsing="false" onAction="#closeModal" prefHeight="25.0" prefWidth="299.0" text="Annuler">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
                  <Button fx:id="buttonCreer" mnemonicParsing="false" prefHeight="25.0" text="Créer" />
              </buttons>
               <padding>
                  <Insets top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets top="200.0" />
               </VBox.margin>
            </ButtonBar>
         </children>
      </VBox>
   </children>
